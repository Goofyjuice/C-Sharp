@{
    ViewData["Title"] = "Unit 04 Studio Page";
}

<h1>Unit 05 Studio Home Page - Pets!</h1>

<h2>List of Dogs and Their Sizes</h2>

@if (ViewBag.dogs.Count == 0)
{
    <p>No dogs stored in dictionary yet.</p>
}

<p><a asp-controller="Home" asp-action="Add">Add a Dog</a></p>

<form method="post" action="/Home/DeleteMany">
    <table class="table table-striped">
        <tr>
            <th>Breed</th>
            <th>Size</th>
            <th>Action</th>
        </tr>
        @foreach (KeyValuePair<string, string> dog in ViewBag.dogs)
        {
            <tr>
                <td>@dog.Key</td>
                <td>@dog.Value</td>
                <td><input type="checkbox" name="deletedogs" id="deletedogs" value="@dog.Key" /></td>
            </tr>
        }
    </table>
    <input type="submit" value="Delete Dogs" />
</form>

<hr />

<h2>Delete a single dog from the list.</h2>

<form method="post" action="/Home/DeleteOne">
    <select name="onedog" id="onedog">
        @foreach (KeyValuePair<string, string> puppy in ViewBag.dogs)
        {
            <option value="@puppy.Key">@puppy.Key</option>
        }
    </select>
    <br />
    <input type="submit" value="Remove Single Dog" />
</form>